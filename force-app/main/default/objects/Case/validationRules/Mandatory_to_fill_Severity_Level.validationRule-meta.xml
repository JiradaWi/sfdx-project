<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandatory_to_fill_Severity_Level</fullName>
    <active>true</active>
    <description>When Call Type is &#39;Complaint&#39;</description>
    <errorConditionFormula>AND(  ISPICKVAL( Type__c , &#39;Complaint&#39;)  ,Ispickval( Severity_Level__c ,&#39;&#39;))</errorConditionFormula>
    <errorDisplayField>Severity_Level__c</errorDisplayField>
    <errorMessage>Please input Severity Level.</errorMessage>
</ValidationRule>
